<!DOCTYPE html>
%html
  %head
    %title NewDividendReporter
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = stylesheet_link_tag 'http://yui.yahooapis.com/3.3.0/build/cssgrids/grids-min.css'
    = csrf_meta_tag
    #wrapper.yui3-u-1
      #topbar.yui3-u-1
        - if current_user
          = render :partial => "shared/top_bar_logged_in"
        - else
          = render :partial => "shared/top_bar_logged_out"
      #content.yui3-u-1
        = yield
      %body
        .notice 
        = notice
        .alert
        = alert

